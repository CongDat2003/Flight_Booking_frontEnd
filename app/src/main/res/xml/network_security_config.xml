<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phÃ©p cleartext traffic cho development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Studio Emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Bluestacks -->
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">192.168.0.0/24</domain>
        <!-- Localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Real device - Local IP -->
        <domain includeSubdomains="true">192.168.78.117</domain>
        <domain includeSubdomains="true">192.168.10.96</domain>
        <domain includeSubdomains="true">192.168.10.0/24</domain>
    </domain-config>
    
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
