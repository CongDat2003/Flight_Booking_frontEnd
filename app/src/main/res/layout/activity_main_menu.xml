<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6FF">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:paddingBottom="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/header_background"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_header_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/header_overlay"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:alpha="0.18"
                android:scaleType="centerCrop"
                android:src="@drawable/world_map_pattern"
                app:layout_constraintBottom_toBottomOf="@id/header_background"
                app:layout_constraintEnd_toEndOf="@id/header_background"
                app:layout_constraintStart_toStartOf="@id/header_background"
                app:layout_constraintTop_toTopOf="@id/header_background" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/user_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="48dp"
                android:clickable="false"
                android:focusable="false"
                android:stateListAnimator="@null"
                app:cardBackgroundColor="#E6FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="96dp"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/avatar_circle_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_avatar"
                        app:layout_constraintTop_toTopOf="@id/iv_avatar">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chào mừng trở lại,"
                            android:textColor="#7FE5F1FF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                    android:text="John Doe"
                            android:textColor="#FFFFFFFF"
                            android:textSize="20sp"
                    android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Chuẩn bị cho hành trình tiếp theo của bạn cùng Flightly."
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_promo"
                android:layout_width="0dp"
        android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:stateListAnimator="@null"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                    android:background="@drawable/banner_gradient"
                    android:minHeight="140dp"
                    android:padding="22dp">

            <LinearLayout
                        android:id="@+id/promo_text_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/promo_illustration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                            android:text="✈️ Khuyến mại mùa hè"
                            android:textColor="#FFFFFFFF"
                            android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                            android:text="Ưu đãi thông minh dành riêng cho bạn"
                            android:textColor="#F5FFFFFF"
                            android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_banner_book"
                    android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="28dp"
                            android:paddingEnd="28dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                    android:text="Đặt vé ngay"
                            android:textAllCaps="false"
                            android:textColor="#1C2B54"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="#FFFFFFFF"
                            app:cornerRadius="28dp"
                            app:elevation="2dp"
                            app:strokeColor="#00FFFFFF"
                            app:strokeWidth="0dp" />
            </LinearLayout>

                    <ImageView
                        android:id="@+id/promo_illustration"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:alpha="0.92"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_travel_banner"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/label_quick_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="Khám phá tiện ích"
                android:textColor="#1B1E24"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_promo" />

            <TextView
                android:id="@+id/label_quick_actions_sub"
                android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                android:text="Tiếp cận mọi tính năng chỉ với một chạm."
                android:textColor="#6B7A90"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_quick_actions" />

            <GridLayout
                android:id="@+id/home_quick_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_quick_actions_sub">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_book_flight"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1A1B5AF6"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_flight_ticket"
                                app:tint="#1B5AF6" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Đặt vé"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Tìm kiếm &amp; đặt chuyến bay yêu thích"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_my_trips"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1AFF9800"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_history"
                            app:tint="#FF9800" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Chuyến đi"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Theo dõi hành trình và vé đã lưu"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_notifications"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1AFF7043"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                            android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                            <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                                <ImageView
                                    android:id="@+id/iv_notifications_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_notifications"
                                app:tint="#FF7043" />

                                <TextView
                                    android:id="@+id/tv_notifications_badge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|end"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="-6dp"
                                    android:background="@drawable/badge_background"
                                    android:gravity="center"
                                android:minWidth="18dp"
                                android:minHeight="18dp"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:textColor="@android:color/white"
                                android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                                android:text="Thông báo"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Không bỏ lỡ cập nhật và ưu đãi"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                        </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_ai_chat"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1A6200EA"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                        <ImageView
                            android:id="@+id/iv_ai_chat_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_ai_chatbot_simple_animated" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="AI Chat"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Trò chuyện &amp; nhận trợ giúp tức thì"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_ai_plan"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1A5C6BC0"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_ai_plan" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="AI Plan"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Lập kế hoạch chuyến đi siêu cá nhân hóa"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menu_profile"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#1AFFB74D"
                    app:strokeColor="#E2E9FF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/home_menu_icon_bg"
                            android:padding="14dp">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_person_outline"
                                app:tint="#FFB74D" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Hồ sơ"
                            android:textColor="#0F1D46"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Điều chỉnh thông tin &amp; ưu đãi cá nhân"
                            android:textAlignment="center"
                            android:textColor="#7283A2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_bg"
        app:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
