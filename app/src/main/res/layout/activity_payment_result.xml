<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Status Background Circle -->
        <View
            android:id="@+id/view_status_background"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle_background"
            android:elevation="4dp" />

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_check_circle"
            android:elevation="8dp" />

        <!-- Status Title -->
        <TextView
            android:id="@+id/tv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Thanh toán thành công!"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Status Message -->
        <TextView
            android:id="@+id/tv_status_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Vé máy bay của bạn đã được xác nhận thành công."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- Transaction Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Transaction ID -->
                <TextView
                    android:id="@+id/tv_transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Mã giao dịch: TXN2024120112345678"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="monospace" />

                <!-- Amount -->
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số tiền: 1,500,000 VND"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- View Ticket Button -->
            <Button
                android:id="@+id/btn_view_ticket"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_primary"
                android:text="Xem vé"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="2dp" />

            <!-- Back to Home Button -->
            <Button
                android:id="@+id/btn_back_to_home"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_secondary"
                android:text="Về trang chủ"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:elevation="1dp" />

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView>



