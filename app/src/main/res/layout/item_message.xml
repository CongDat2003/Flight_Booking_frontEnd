<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- User message (right aligned) -->
    <LinearLayout
        android:id="@+id/layout_user_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:maxWidth="350dp"
            android:orientation="horizontal"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ai_message_user_bubble"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_user_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tin nhắn của bạn"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/tv_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:text="12:30"
                    android:textColor="#E0FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ai_avatar_user"
                android:src="@drawable/ic_person"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- AI message (left aligned) -->
    <LinearLayout
        android:id="@+id/layout_admin_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:maxWidth="350dp"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:id="@+id/iv_ai_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ai_avatar_robot"
                android:src="@drawable/ic_ai_chatbot"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ai_message_ai_bubble"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_admin_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tin nhắn từ AI"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/tv_admin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12:30"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
